#RewriteCond %{REQUEST_URI} ^/dev($|/)
#RewriteCond %{REMOTE_ADDR} !^192.168.100.10$
#RewriteCond %{REMOTE_ADDR} !^203.59.94.230$
#RewriteCond %{REQUEST_URI} !^/upgradeinprogress.php
#RewriteCond %{REQUEST_URI} !^/moodle.gif
#RewriteCond %{REQUEST_URI} !^/invaders.swf
#RewriteRule ^(.*) /upgradeinprogress.php [L]

# Disable the below rule if you enable the ones above (maintenance mode)
# ppl keep accessing this script even after the above is disabled, tsk tsk.
Redirect /upgradeinprogress.php http://docs.moodle.org/

# Default lang and version is 22 english
# e.g. http://docs/-> http://docs/22/en
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(.*) /22/en/ [R=301,L]

# Add trailing / if missing, causing mediawiki to serve the native langs Main_Page
RewriteRule ^(test|dev)$ /$1/
RewriteRule ^archive/([a-z]{2}|pt_br)$ /archive/$1/
RewriteRule ^(all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)$ /$1/$2/

# Rewrite attempts to access /24/* to 23/* using temporary redirection
# e.g. http://docs/24/en/mod/forum/view -> http://docs/23/en/mod/forum/view
RewriteCond %{REQUEST_URI} ^/(24)($|/)
RewriteRule ^(24)($|/(.*)) /23$2 [R=302,L]

# Redirect versionless langs to 22 version
# e.g. http://docs/en/mod/forum/view -> http://docs/22/en/mod/forum/view
RewriteCond %{REQUEST_URI} ^/(af|am|ar|ast|az|be|bg|bn|bs|ca|ckb|cs|cy|da|de|de_du|de_kids|dv|el|en|en_us|es|es_ar|es_es|es_mx|et|eu|fa|fi|fil|fj|fo|fr|fr_ca|ga|gd|gl|gu|he|hi|hr|hu|hy|id|is|it|ja|ka|kk|km|kn|ko|la|lo|lt|lv|mi_tn|mi_wwow|mk|ml|mn|mr|ms|ne|nl|nn|no|no_gr|oc_es|pl|pt|pt_br|rm_surs|ro|ru|si|sk|sl|sm|so|sq|sr|sr_cr|sr_cr_bo|sr_lt|sv|sv_fi|sw|ta|ta_lk|te|th|ti|tl|to|tr|tt|uk|ur|uz|vi|wo|zh_cn|zh_tw|zu|en_ar|ca_valencia|kl)($|/)
RewriteRule ^(af|am|ar|ast|az|be|bg|bn|bs|ca|ckb|cs|cy|da|de|de_du|de_kids|dv|el|en|en_us|es|es_ar|es_es|es_mx|et|eu|fa|fi|fil|fj|fo|fr|fr_ca|ga|gd|gl|gu|he|hi|hr|hu|hy|id|is|it|ja|ka|kk|km|kn|ko|la|lo|lt|lv|mi_tn|mi_wwow|mk|ml|mn|mr|ms|ne|nl|nn|no|no_gr|oc_es|pl|pt|pt_br|rm_surs|ro|ru|si|sk|sl|sm|so|sq|sr|sr_cr|sr_cr_bo|sr_lt|sv|sv_fi|sw|ta|ta_lk|te|th|ti|tl|to|tr|tt|uk|ur|uz|vi|wo|zh_cn|zh_tw|zu|en_ar|ca_valencia|kl)($|/(.*))  /22/$1$2 [R=301,L]

# Redirect language children to parents [if a wiki exists for the parent]
# e.g. http://docs/19/es_es/mod/forum/view -> http://docs/19/es/mod/forum/view
RewriteCond %{REQUEST_URI} ^(/all/|/2x/|/19/|/20/|/21/|/22/|/23/|/)([a-z]{2})_([a-z]{2}|kids)($|/)
RewriteRule (^19/|^20/|^21/|^22/|^23/|^)(de_du|de_kids|en_us|en_kids|es_ar|es_es|es_mx|fr_ca)($|/(.*)) %1%2/$4 [R=301,L]

# Redirect any non-current wikied language to the english wiki of the same version
# e.g.  http://docs/21/la/mod/forum/view -> http://docs/21/en/mod/forum/view
RewriteCond %{REQUEST_URI} !^/(all|2x|19|20|21|22|23)/(en|de|ja|es|fr|is|eu|hr|pt_br)($|/)
RewriteCond %{REQUEST_URI} ^/(all|2x|19|20|21|22|23)/(af|am|ar|ast|az|be|bg|bn|bs|ca|ckb|cs|cy|da|de|de_du|de_kids|dv|el|en|en_us|es|es_ar|es_es|es_mx|et|eu|fa|fi|fil|fj|fo|fr|fr_ca|ga|gd|gl|gu|he|hi|hr|hu|hy|id|is|it|ja|ka|kk|km|kn|ko|la|lo|lt|lv|mi_tn|mi_wwow|mk|ml|mn|mr|ms|ne|nl|nn|no|no_gr|oc_es|pl|pt|pt_br|rm_surs|ro|ru|si|sk|sl|sm|so|sq|sr|sr_cr|sr_cr_bo|sr_lt|sv|sv_fi|sw|ta|ta_lk|te|th|ti|tl|to|tr|tt|uk|ur|uz|vi|wo|zh_cn|zh_tw|zu|en_ar|ca_valencia|kl)
RewriteRule ^(all|2x|19|20|21|22|23)/(af|am|ar|ast|az|be|bg|bn|bs|ca|ckb|cs|cy|da|de|de_du|de_kids|dv|el|en|en_us|es|es_ar|es_es|es_mx|et|eu|fa|fi|fil|fj|fo|fr|fr_ca|ga|gd|gl|gu|he|hi|hr|hu|hy|id|is|it|ja|ka|kk|km|kn|ko|la|lo|lt|lv|mi_tn|mi_wwow|mk|ml|mn|mr|ms|ne|nl|nn|no|no_gr|oc_es|pl|pt|pt_br|rm_surs|ro|ru|si|sk|sl|sm|so|sq|sr|sr_cr|sr_cr_bo|sr_lt|sv|sv_fi|sw|ta|ta_lk|te|th|ti|tl|to|tr|tt|uk|ur|uz|vi|wo|zh_cn|zh_tw|zu|en_ar|ca_valencia|kl)($|/(.*))  /$1/en$3 [R=301,L]

# Redirect japanese,french 2.x to 2x wiki [option 2 -ish]
# e.g.  http://docs/22/ja/mod/forum/view -> http://docs/2x/ja/mod/forum/view
RewriteCond %{REQUEST_URI} ^/(20|21|22|23)/(ja|fr)($|/)
RewriteRule ^(20|21|22|23)/(ja|fr)($|/(.*))  /2x/$2$3 [R=301,L]

# Redirect german 2.x to 20 wiki
RewriteCond %{REQUEST_URI} ^/(21|22|23)/(de)($|/)
RewriteRule ^(20|21|22|23)/(de)($|/(.*))  /20/$2$3 [R=301,L]

# Redirect combined wikis to the 'all' version [option 1]
# e.g. http://docs/22/es/mod/forum/view -> http://docs/19/es/mod/forum/view
RewriteCond %{REQUEST_URI} ^/(19|20|21|22|23)/(es|is|eu|hr|pt_br)($|/)
RewriteRule ^(19|20|21|22|23)/([a-z]{2}|pt_br)($|/(.*))  /all/$2$3 [R=301,L]

# Regex to catch /en/Development: namespace and redirect to /dev/
RewriteCond %{REQUEST_URI} ^/(19|20|21|22|23)/en/Development(:|_(talk:))(.*)
RewriteRule ^(19|20|21|22|23)/en/Development(:|_(talk:))(.*) /dev/$3$4 [R=301,L,QSA]
# As above, but catches /en/index.php with query string title=Development: instead
RewriteCond %{QUERY_STRING} ^(.*?)title=Development(:|_(talk:))(.*)
RewriteRule ^(19|20|21|22|23)/en/index.php /dev/index.php?%1title=%3%4 [R=301,L]

# Regex to catch old skin urls
RewriteRule ^([a-z]{2}|pt_br)/skins/(.*) /19/$1/skins/$2
RewriteRule ^([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/(.*) /prodwiki/19images/images_$2/$3 [L,QSA]

# Regex to catch requests for wiki pages
RewriteCond %{REQUEST_URI} ^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/skins/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/images_([a-z]{2}|pt_br|test|dev)/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/stylesheets/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/(redirect|texvc|index|api).php
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/favicon.ico
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/robots.txt
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/opensearch_desc.php
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/config/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/extensions/MediawikiPlayer/
RewriteCond %{REQUEST_URI} !^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/load.php
RewriteCond %{QUERY_STRING} ^$ [OR] RewriteCond %{REQUEST_URI} ^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/Special:Search
RewriteRule ^(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/(.*) /prodwiki/index.php?title=$5 [L,QSA,S=1]

# Regex to catch requests for all ver/langs images
RewriteCond %{REQUEST_URI} ^/(all|19|20|21|22|23)/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/
RewriteRule ^(all|19|20|21|22|23)/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/(.*) /prodwiki/$1images/images_$2/$4 [L,QSA]

# Regex to catch requests for 2x images
RewriteCond %{REQUEST_URI} ^/2x/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/
RewriteRule ^2x/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/(.*) /prodwiki/20images/images_$1/$3 [L,QSA]

# Regex to catch requests for special wiki images
RewriteCond %{REQUEST_URI} ^/(test|dev)/images_(test|dev)/
RewriteRule ^(test|dev)/images_(test|dev)/(.*) /prodwiki/20images/images_$2/$3 [L,QSA]
# Regex to catch requests for archive images
RewriteCond %{REQUEST_URI} ^/archive/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/
RewriteRule ^archive/([a-z]{2}|pt_br)/images_([a-z]{2}|pt_br)/(.*) /prodwiki/19images/images_$1/$3 [L,QSA]

# Regex to catch requests for all other urls like css, robots, favicon, errors etc..
RewriteCond %{REQUEST_URI} ^/(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/
RewriteRule ^(test|dev|((archive|all|2x|19|20|21|22|23)/([a-z]{2}|pt_br)))/(.*) /prodwiki/$5 [L,QSA]
